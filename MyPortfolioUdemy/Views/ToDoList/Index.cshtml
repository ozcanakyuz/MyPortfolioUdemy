@model List<ToDoList>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">To-Do</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">To Do List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							This is the basic table view of the ready To Do List!
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Title</th>
									<th scope="col">Date</th>
									<th scope="col">Status</th>
									<th scope="col">Update</th>
									<th scope="col">Delete</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.DateTime</td>
										@if (item.Status == false)
										{
											<td><a href="/ToDoList/ChangeToDoListStatusToTrue/@item.ToDoListId" class="btn btn-info"><i class="la la-check"></i></a></td>
										}
										else
										{
											<td><a href="/ToDoList/ChangeToDoListStatusToFalse/@item.ToDoListId" class="btn btn-dark"><i class="la la-close"></i></a></td>
										}
										<td><a href="/ToDoList/UpdateToDoList/@item.ToDoListId" class="btn btn-success">Update</a></td>
										<td><a href="/ToDoList/DeleteToDoList/@item.ToDoListId" class="btn btn-danger">Delete</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/ToDoList/CreateToDoList/" class="btn btn-primary">Add New To-Do</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

