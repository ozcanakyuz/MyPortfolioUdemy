@model ToDoList

@{
    ViewData["Title"] = "CreateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Dashboard</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Dashboard Table</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>To Do Title</label>
							<input type="text" asp-for="Title" class="form-control" required />
							<br />
							<label>Date</label>
							<input type="date" asp-for="DateTime" class="form-control" required />
							<br />
							<label>Image</label>
							<input type="text" asp-for="ImageUrl" class="form-control" required />
							<br />
							<button class="btn btn-primary">Add To-Do</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>


