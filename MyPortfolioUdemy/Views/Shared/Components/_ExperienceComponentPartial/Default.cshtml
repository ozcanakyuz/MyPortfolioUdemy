@model List<MyPortfolioUdemy.DAL.Entities.Experience>

    <div class="row about-content about-content--timeline">

        <div class="col-full text-center">
            <h3>My Work Experience.</h3>
        </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        // Kolon yönü: çift index'ler solda, tek index'ler sağda
        bool isLeftColumn = i % 2 == 0;
        string columnClass = isLeftColumn ? "col-six tab-full left" : "col-six tab-full right";

        <div class="@columnClass">
            <div class="timeline">
                <div class="timeline__block">
                    <div class="timeline__bullet"></div>
                    <div class="timeline__header">
                        <p class="timeline__timeframe">@Model[i].Date</p>
                        <h3>@Model[i].Head</h3>
                        <h5>@Model[i].Title</h5>
                    </div>
                    <div class="timeline__desc">
                        <p>@Model[i].Description</p>
                    </div>
                </div>
            </div> <!-- end timeline -->
        </div> <!-- end column -->
    }


    </div> <!-- end about-content timeline -->
